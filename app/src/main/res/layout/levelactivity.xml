<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/levelbackground">
<!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:src="@drawable/levelbackground">-->
    <!-- -->

    <!--</ImageView>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:layout_centerInParent="true"
        >
        <LinearLayout
            android:id="@+id/linearlevel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="50dp">
        <ImageView
            android:id="@+id/level1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/balloon1"/>
            <ImageView
                android:id="@+id/level2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/balloon2"/>
            <ImageView
                android:id="@+id/level3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/balloon3"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlevel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
android:layout_below="@+id/linearlevel1"
            android:layout_marginLeft="50dp">
            <ImageView
                android:id="@+id/level4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/balloon4"/>
            <ImageView
                android:id="@+id/level5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/balloon5"/>
            <ImageView
                android:id="@+id/level6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/balloon6"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlevel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
android:layout_below="@+id/linearlevel2"
            android:layout_marginLeft="50dp">
            <ImageView
                android:id="@+id/level7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/balloon7"/>
            <ImageView
                android:id="@+id/level8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/balloon8"/>
            <ImageView
                android:id="@+id/level9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/balloon9"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>